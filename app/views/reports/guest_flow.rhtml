
<fieldset><legend><strong>Filter</strong></legend>
	<% form_remote_tag :url => {:action => 'filter_guest_flow_results'} do %>
		<%= collection_select(:filter, :group_id, Group.all_leaves, :id, :name, :prompt => "-- All Groups --") %>
		<b>Choose Range: </b><%= select(:filter, :range, Tool::RANGES) %>
	<%= submit_tag 'Go' %>
	<span id='progress' style='display:none;'><img src='/images/working.gif'></span>
	<% end %>
</fieldset>
&nbsp;



<div id ="guest_flow_results">
	<%= render :partial => "guest_flow_summary" %>
</div>
	



