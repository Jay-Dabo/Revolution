<h3>River Valley Church Jobs Catalog</h3>

<strong>Total Jobs: <%= Job.find(:all).length rescue nil %></strong><br>
<strong>Target: 300</strong><hr><hr>

<% @departments = Department.find(:all) %>

<% @departments.sort_by(&:name).each do |d| %>
<div style="float:none;clear:both;">
	<br>
	<label>
		Department: 
	</label><%= d.name %><hr>
	<%= render :partial => "ministry", :collection => d.ministries.sort_by(&:name) %>
</div>

<% end %>
