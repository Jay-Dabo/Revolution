<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :record_type_id, as: :hidden, input_html: { value: @record_type_id } %>
    <%= f.association :group_by, collection: @group_bys, label_method: :column_name %>
    <%= f.input :parameters, as: :hidden, input_html: { value: @search_params } %>
    <%= f.association :layout, collection: @layouts %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
