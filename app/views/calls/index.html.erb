<h3 class="subheader">Listing Calls</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>From</th>
			<th>To</th>
			<th>Rec_duration</th>
			<th>For_user_id</th>
			<th>Created At</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @calls.each do |call| %>
	  <tr>
	    <td><%= link_to call.from, call %></td>
	    <td><%= call.to %></td>
	    <td><%= call.rec_duration %></td>
	    <td><%= call.for_user_id %></td>
		<td><%= call.created_at %></td>
	    <td><%= link_to '', edit_call_path(call), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', call, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Call", new_call_path, class: "button radius"  %>
