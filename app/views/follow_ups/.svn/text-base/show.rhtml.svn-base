
<h3>Contact Type: <%= @follow_up.contact.contact_type.name rescue nil %></h3>
<h3>Attributed To: <%= @follow_up.contact.attributed_to rescue nil %></h3>

<hr>
<b>Follow-Up Type: </b><%= h @follow_up.follow_up_type.name rescue nil %><br>
<b>Notes: </b><%= h @follow_up.notes %>

<hr>
<%= link_to 'Edit', :action => 'edit', :id => @follow_up %> | 
<%= link_to 'Delete', {:action => 'destroy', :id => @follow_up},
	                   :confirm => "Are you sure you want to permanently delete this follow-up? This cannot be undone.",
	 				   :method => :post %> | 
<%= link_to 'Show Contact', :controller => 'contacts', :action => 'follow_up', :id => @follow_up.contact %>
