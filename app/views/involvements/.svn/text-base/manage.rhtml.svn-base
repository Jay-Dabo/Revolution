<div class="involvements-wrap" style="height:100%">
	<div id="top" class="top-third">
		<div class="third-panel">
			<div class="column-header">
				Departments
			</div>
			<div class="inner">
			<% @departments = Department.find(:all, :order => :name) %>
			<% @departments.each do |d| %>
				<div class="row-block">
					<%= link_to_remote "#{d.name}", :url => {:action => 'department_chosen', :department_id => d.id} %>
				</div>
			<% end %>
			</div>
		</div>
		
		<div class="third-panel">
			<div class="column-header">
				Ministries
			</div>
			<div id="ministries" class="inner">
					<%= render :partial => "ministries", :locals => {:department_id => @department ||= '%'} %>
			</div>
		</div>
		
		

			<div class="third-panel">
				<div class="column-header">
					Teams
				</div>
				<div id="teams" class="inner">
				<%= render :partial => "teams", :locals => {:department => @department ||= '%', :ministry => @ministry ||= '%'} %>
				</div>
			</div>
	
		
	</div>

	<div id="bottom" class="bottom-two-thirds">
		<div id="jobs">
			<%= render :partial => "jobs", :locals => {:department => @department ||= '%', :ministry => @ministry ||= '%', :team => @team ||= '%'} %>
		</div>
	</div>
</div>