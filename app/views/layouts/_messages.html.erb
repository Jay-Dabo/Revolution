<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="twelve columns">
		<div class="alert-box <%= name == :notice ? "success" : "alert" %>">
	      <%= content_tag :div, msg, :id => "flash_#{name}" %>
		  <a href="" class="close">&times;</a>
     	</div>
  </div>
  <% end %>
<% end %>