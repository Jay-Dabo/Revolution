<%= error_messages_for 'department' %>

<!--[form:department]-->
<p><label for="department_name">Name</label><br/>
<%= text_field 'department', 'name'  %></p>


<% @people = Person.find_all_with_tag("Department Level") %>

<p><label for="department_responsible_person_id">Responsible Person</label><br/>
<%= collection_select('department', 'responsible_person_id', @people, :id, :full_name,{:include_blank => true, :prompt => true})  %></p>

<p><label for="department_responsible_person_title">Responsible person title</label><br/>
<%= text_field 'department', 'responsible_person_title'  %></p>

<p><label for="department_purpose">Purpose</label><br/>
<%= text_area 'department', 'purpose', :cols => 70, :rows => 5  %></p>

<p><label for="department_win">Win</label><br/>
<%= text_area 'department', 'win', :cols => 70, :rows => 5 %></p>
