<%= error_messages_for :person %>
<% form_tag ({:action => 'create_picture', :person_id => @person}, { :method => :post, :multipart => true }) do %>

<fieldset><legend><strong>Choose Picture</strong></legend>
<p>
<%= file_field :person, :uploaded_picture_data %>
<br><span class="tiny" >
We accept JPEG, GIF, or PNG files up to 500 KB.
</span>
</p>
<p>
<%= submit_tag "Create" %> | <%= link_to "cancel", :controller => "people", :action => "show", :id => @person %>
</p>
<% end %>
</fieldset>