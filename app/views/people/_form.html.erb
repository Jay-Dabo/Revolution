<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :first_name %>
	<%= f.input :last_name, placeholder: "Leave blank to accept household name" %>
	<%= f.input :gender, :collection => Person::GENDERS, wrapper_html: {class: "four columns"} %>
	<%= f.input :birthdate, :as => :string, wrapper_html: {class: "eight columns"}, input_html: {:class => "datepicker"} %>
	<%= f.input :household_position, :collection => Person::POSITIONS, wrapper_html: {class: "four columns"} %>
	<%= f.input :allergies, wrapper_html: {class: "eight columns"} %>
	<%= f.association :default_group, collection: Group.checkin_groups, wrapper_html: {class: "four columns"} %>
	<%= f.input :facebook_url, wrapper_html: {class: "eight columns"} %>
	<%= f.input :household_id, as: :hidden, input_html: {value: @household_id} %>
	&nbsp;
  </div>
<hr>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
