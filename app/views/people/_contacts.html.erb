<%= widget_box("Contacts") do %>
	<div class="widget-content">
		<div id="contacts">	
			<div class="row twelve columns">
				<h5 class="subheader">
					Contacts
					<%= link_to '', new_contact_path(person_id: person.id), class: "general-enclosed foundicon-plus right", title: "add contact" %>
				</h5>
			</div><hr>
			<% if person.contacts.empty? %>
				<div class="panel radius">
					<p class="lead">This person has no contacts.</p>
				</div>
			<% else %>
				<table class="twelve responsive">
					<tr>
						<th>Date</th>
						<th>Contact Type</th>
						<th>Responsible User</th>
						<th>Status</th>
						<th>Comments</th>
						<th></th>
					</tr>
					<% person.contacts.order(:created_at).each do |contact| %>
						<tr>
							<td><%= link_to contact.created_at.to_time.to_s(:long), contact %></td>
							<td><%= contact.contact_type.name %></td>
							<td><%= contact.responsible_user.full_name %></td>
							<td><%= contact.status %></td>
							<td><%= contact.comments %></td>
							<td>
								<%# link_to '', edit_tagging_path(tagging), class: "general-enclosed foundicon-edit", "data-reveal-id" => "myModal", :remote => true %>&nbsp;&nbsp;
								<%# link_to '', tagging_path(tagging), method: :delete, data: {confirm: "Are you sure you want to destroy this tag record forever?"}, class: "general-enclosed foundicon-minus" %>
							</td>
						</tr>
					<% end %>		
				</table>
			<% end %>
		</div>
	</div>
<% end %>
