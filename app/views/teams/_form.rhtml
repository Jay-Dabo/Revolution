<%= error_messages_for 'team' %>

<!--[form:team]-->
<p><label for="team_name">Name</label><br/>
<%= text_field 'team', 'name'  %></p>

<% @ministries = Ministry.find(:all) %>
<p><label for="team_ministry_id">Ministry</label><br/>
<%= collection_select 'team', 'ministry_id', @ministries, :id, :name  %></p>


<% @people = Person.find_all_with_tag("Team Level") %>

<p><label for="team_responsible_person_id">Responsible person</label><br/>
<%= collection_select('team', 'responsible_person_id', @people, :id, :full_name, {:include_blank => true})  %></p>

<p><label for="team_responsible_person_title">Responsible person title</label><br/>
<%= text_field 'team', 'responsible_person_title'  %></p>

<p><label for="team_purpose">Purpose</label><br/>
<%= text_area 'team', 'purpose', :cols => 70, :rows => 3  %></p>

<p><label for="team_win">Win</label><br/>
<%= text_area 'team', 'win', :cols => 70, :rows => 3  %></p>
