<h3>Set Up Event Types</h3>

<% @event_types = EventType.find(:all) %>
<% @event_types.each do |e| %>
	<div id="event_type">
		<span>
			<%= link_to_remote "#{e.name}", :url => { :action => 'select_event_type', :id => e.id } %>
		</span>
		<span>
			<%= link_to_remote "X", :url => { :action => 'delete_event_type', :id => e.id },
									:confirm => "Are you sure you want to delete this event type?" %>
		</span>
	</div>
<% end %>
<%= link_to_remote "New", :url => { :action => 'new_event_type'} %>
