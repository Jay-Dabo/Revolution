<h1>Listing settings</h1>

<table>
  <tr>
  <% for column in Setting.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for setting in @settings %>
  <tr>
  <% for column in Setting.content_columns %>
    <td><%=h setting.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => setting %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => setting %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => setting }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @setting_pages.current.previous } if @setting_pages.current.previous %>
<%= link_to 'Next page', { :page => @setting_pages.current.next } if @setting_pages.current.next %> 

<br />

<%= link_to 'New setting', :action => 'new' %>
