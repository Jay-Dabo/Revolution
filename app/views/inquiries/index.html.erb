<h3 class='subheader'><%= page_entries_info @inquiries %></h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Person</th>
			<th>Group</th>
			<th>Created By</th>
			<th>Created At</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @inquiries.each do |inquiry| %>
	  <tr>
	    <td><%= link_to inquiry.person.full_name, inquiry.person %></td>
	    <td><%= link_to inquiry.group.name, inquiry.group.becomes(Group) %></td>
	    <td><%= inquiry.created_by %></td>
	    <td><%= inquiry.created_at %></td>
	    <td>
	    	<%= link_to '', inquiry, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<%= paginate @inquiries %>

