<% @item = @event %>
<%= render :partial => "shared/admin_box", :item => @item %>


<p>
	<label>Event Name: </label><%= @event.name rescue nil %>
</p>

<p>
	<label>Date: </label><%= @event.formatted_date rescue nil %>
</p>

<p>
	<label>Event Type: </label><%= @event.event_type.name rescue nil %>
</p>

<%= link_to 'Edit', :action => 'edit', :id => @event %> |
<%= link_to 'Back', :action => 'manage' %>

<br>

<h3>Add Instances to This Event</h3>

<div id="add_instance">
	<% form_tag :action => 'add_instance', :id => @event do %>
		<%= render :partial => 'instance_picker', :locals => {:event => @event} %>
		<%= submit_tag "Add Instance" %>
	<% end %>
</div>

<h3>Instances for This Event</h3>
<div id="list_instances">
	<%= render :partial => 'instances/instances' %>
</div>
