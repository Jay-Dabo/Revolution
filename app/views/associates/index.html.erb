<h3>Listing Associates</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>First_name</th>
			<th>Last_name</th>
			<th>Comments</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @associates.each do |associate| %>
	  <tr>
	    <td><%= associate.first_name %></td>
	    <td><%= associate.last_name %></td>
	    <td><%= associate.comments %></td>
	    <td><%= link_to '', edit_associate_path(associate), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', associate, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Associate", new_associate_path, class: "button radius"  %>
