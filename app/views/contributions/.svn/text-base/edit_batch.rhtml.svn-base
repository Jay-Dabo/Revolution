<% form_tag :action => 'update_batch', :id => @batch do %>

<%= error_messages_for 'batch' %>

	<p>
		<label>Count Total:</label><br>
		$<%= text_field 'batch', 'count_total' %>
	</p>
	
	<p>
		<label># of Contributions:</label><br>
		<%= text_field 'batch', 'contributions_num' %>
	</p>
	
	<p>
		<%= submit_tag 'Save' %>
	</p>
	
<% end %>

<%= link_to 'cancel', :action => 'index' %>