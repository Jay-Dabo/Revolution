<fieldset>
	<legend>
		<strong>Filter</strong>
	</legend>
	
	<% form_remote_tag :url => {:action => 'filter_stats'} do %>
	
	<table border="0" cellspacing="3" cellpadding="3">
		<tr>
			<td>
				<label>Choose Fund</label><br>
				<%= collection_select(:filter, :fund_id, Fund.find(:all), :id, :name, options = {:prompt => "All"}) %>
			</td>
			<td>
				<%= submit_tag 'Go' %> <span id='progress' style='display:none;'><img src='/images/working.gif'></span>
			</td>
		</tr>
	</table>
	
	<% end %>
	
</fieldset>