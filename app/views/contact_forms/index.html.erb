<h3>Listing Contact Forms</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Name</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @contact_forms.each do |contact_form| %>
	  <tr>
	    <td><%= link_to contact_form.name, contact_form %></td>
	    <td><%= link_to '', edit_contact_form_path(contact_form), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', contact_form, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Contact Form", new_contact_form_path, class: "button radius"  %>
