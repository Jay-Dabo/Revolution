<h3 class="subheader"><a class="icon-magnet"></a> Listing Contact Types</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
		<th><%= sort_link @q, :name, "Name" %></th>
		<th><%= sort_link @q, :default_responsible_user_last_first_name, "Default Responsible User" %></th>
		<th>Default Responsible Ministry</th>
		<th>Multiple Close</th>
		<th>Auto-Notify</th>
		<th>Quick Contact</th>
		<th>Confidential</th>
		<th>Status</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @contact_types.each do |contact_type| %>
	  <tr>
	    <td><%= link_to contact_type.name, contact_type %></td>
	    <td><%= contact_type.default_responsible_user.full_name %></td>
	    <td><%= contact_type.default_responsible_ministry_id %></td>
	    <td><%= check_box_tag 'hi', '1', contact_type.multiple_close, disabled: true %></td>
	    <td><%= check_box_tag 'hi', '1', contact_type.notiphy, disabled: true %></td>
	    <td><%= check_box_tag 'hi', '1', contact_type.quick_contact, disabled: true %></td>
	    <td><%= check_box_tag 'hi', '1', contact_type.confidential, disabled: true %></td>
		<td><%= ct_status_label(contact_type) %></td>
	    <td><%= link_to '', edit_contact_type_path(contact_type), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', contact_type, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<%= paginate @contact_types %>

<br />

<%= link_to "New Contact Type", new_contact_type_path, class: "button radius"  %>
