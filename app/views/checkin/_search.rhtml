

<% form_tag({:action=> "home"}, { :onSubmit => "Element.show('working');" }) do %>
<table>
<tr>
<td><label for="searchtext"><font size="1"><b>Find Household:</b></font></label></td>
<td><%= text_field_tag :searchtext %></td>
<td>
	<%= submit_tag "Search" %>
</td>
<td><img alt="spinner" id="spinner" style="display:none;" /></td>
</tr>
</table>
<% end %>


<%= observe_field(:searchtextxx,
                 :frequency => 0.5,
                 :update => 'people-list',
                 :loading => "Element.show('spinner')",
                 :complete => "Element.hide('spinner')",
                 :url => { :action => :live_search },
				:with => "'name=' + value") %>



