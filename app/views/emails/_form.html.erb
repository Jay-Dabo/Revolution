<h4 class="subheader">Email</h4><hr>
<%= simple_form_for(@email, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :emailable_type, as: :hidden %>
	<%= f.input :emailable_id, as: :hidden %>
	<%= f.input :email %>
	<%= f.input :primary %>
	<%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
