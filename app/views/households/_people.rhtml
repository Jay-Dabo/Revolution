<fieldset><legend><strong>People In This Household</strong></legend>
<div id="list_people">
	<% @peoples = @household %>
	<%= render :partial => 'people/people' %>
</div>


<div id="add_person_menu" style="padding-bottom: 10px;">
  <%= link_to_function "Hide Add Person Form", toggle_person_links('hide') %> |
  <%= link_to_function "Show Add Person Form", toggle_person_links('show') %>
</div>
<% @view ||= "display:none;" %>
	<div id="new_person_wrap" style= "<%= @view %>";>
    <%= render :partial => 'people/new_person', :locals => {:household_id => @household} %>
	</div>
</fieldset>
