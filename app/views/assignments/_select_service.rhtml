
<span class="cell">
<%= collection_select('event', 'id', @available_events, 'id', 'display_name') %>

<%= observe_field 'event_id',
				 :url => {:action => 'event_changed'},
 				 :update => 'instances-combo',
				 :with => 'id'%>
</span>				
<span id="instances-combo", class="cell">
	<%= render :partial => 'select_instance', :locals => {:event_id => @available_events[0]}  %>
</span>

<span id="meetings-combo", class="cell">
	<%= render :partial => "select_meeting", :locals => {:instance_id => @available_instances[0]}  %>
</span>

<span class="cell">
<%= button_to "Apply", :action => 'set_meeting' %>
</span>