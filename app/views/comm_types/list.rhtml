<h1>Listing All Communication Types</h1>

<table>
  <tr>
  <% for column in CommType.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for comm_type in @comm_types %>
  <tr>
  <% for column in CommType.content_columns %>
    <td><%=h comm_type.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => comm_type %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => comm_type %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => comm_type }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @comm_type_pages.current.previous } if @comm_type_pages.current.previous %>
<%= link_to 'Next page', { :page => @comm_type_pages.current.next } if @comm_type_pages.current.next %> 

<br />

<%= link_to 'New comm_type', :action => 'new' %>
