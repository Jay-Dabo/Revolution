<h3 class="subheader">Listing Communication Types</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
	    <th>Name</th>
		<th></th>
	  </tr>
  </thead>
  <tbody>
	<% @comm_types.each do |comm_type| %>
	  <tr>
		<td><%= comm_type.name %></td>
	    <td><%= link_to '', edit_comm_type_path(comm_type), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', comm_type, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Communication Type", new_comm_type_path, class: "button radius"  %>
