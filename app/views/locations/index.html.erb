<h3 class='subheader'>Listing Locations</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Name</th>
			<th>Address1</th>
			<th>Address2</th>
			<th>City</th>
			<th>State</th>
			<th>Zip</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @locations.each do |location| %>
	  <tr>
	    <td><%= location.name %></td>
	    <td><%= location.address1 %></td>
	    <td><%= location.address2 %></td>
	    <td><%= location.city %></td>
	    <td><%= location.state %></td>
	    <td><%= location.zip %></td>
	    <td><%= link_to '', edit_location_path(location), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', location, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Location", new_location_path, class: "button radius"  %>
