<h1>Listing adjectives</h1>

<table>
  <tr>
  <% for column in Adjective.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for adjective in @adjectives %>
  <tr>
  <% for column in Adjective.content_columns %>
    <td><%=h adjective.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => adjective %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => adjective %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => adjective }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @adjective_pages.current.previous } if @adjective_pages.current.previous %>
<%= link_to 'Next page', { :page => @adjective_pages.current.next } if @adjective_pages.current.next %> 

<br />

<%= link_to 'New adjective', :action => 'new' %>
