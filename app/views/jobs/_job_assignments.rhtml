<table class="list">
	<tr>
		<th>Person</th>
		<th>Start Date</th>
		<th>End Date</th>
		<th></th>
		<th></th>
	</tr>
	
	<% @job.involvements.each do |i| %>
	
	<tr class="<%= cycle("even","odd") %>">
		<td><%= link_to "#{i.person.full_name}", :controller=> 'people', :action => 'show', :id => i.person.id %></td>
		<td><%= i.start_date.strftime('%m/%d/%Y') rescue nil %></td>
		<td><%= i.end_date.strftime('%m/%d/%Y') rescue nil %></td>
		<td>
			<%= link_to (image_tag "edit_16x16.gif", :size => "12x12", :border => 0, :title => "Edit this involvement"), :controller => 'involvements', :action => 'edit', :id => i %>
		</td>
		<td>
			<%= link_to_remote (image_tag "delete_16x16.gif", :size => "12x12", :border => 0, :title => "Delete this involvement"), :url => {:action => 'undo_involvement', :id => i, :job_id => i.job },
			 												  :confirm => 'Are you sure you want to destroy this involvement record forever? You can set the end date instead.' %>
		</td>
	</tr>
	<% end %>
	
</table>