<h1>Listing funds</h1>

<table>
  <tr>
  <% for column in Fund.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for fund in @funds %>
  <tr>
  <% for column in Fund.content_columns %>
    <td><%=h fund.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => fund %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => fund %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => fund }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @fund_pages.current.previous } if @fund_pages.current.previous %>
<%= link_to 'Next page', { :page => @fund_pages.current.next } if @fund_pages.current.next %> 

<br />

<%= link_to 'New fund', :action => 'new' %>
