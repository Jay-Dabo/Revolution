<% if not @ministries.empty? %>

<% @ministries.each do |m| %>
	<div id="ministry_<%= m.id %>" class="row-block">
		<%= link_to_remote "#{m.name}", :url => { :action => 'ministry_changed', :id => m.id } %><br>
		<%= link_to "open", :controller => 'ministries', :action => 'show', :id => m.id %>
	</div>
<% end %>

<% else %>
<div id="message">
	There are no instances.
</div>

<% end %>