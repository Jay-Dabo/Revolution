<h3>Listing Cadences</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Name</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @cadences.each do |cadence| %>
	  <tr>
	    <td><%= cadence.name %></td>
	    <td><%= link_to '', edit_cadence_path(cadence), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', cadence, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Cadence", new_cadence_path, class: "button radius"  %>
