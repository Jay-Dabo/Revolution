<%= simple_form_for(@instance_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
	<%= f.input :start_time, as: :string, input_html: {value: @instance_type.starts_at} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
	$('.timepicker').timepicker({ 'step' : 15 });
</script>