<h3>Listing Instance Types</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Name</th>
			<th>Assigned To</th>
			<th># Assigned Groups</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @instance_types.each do |instance_type| %>
	  <tr>
	    <td><%= link_to instance_type.name, instance_type %></td>
		<td><%= instance_type.event_types.collect {|v| link_to(v.name, v)}.to_sentence %></td>
		<td><%= instance_type.groups.length %></td>
	    <td><%= link_to '', edit_instance_type_path(instance_type), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', instance_type, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Instance Type", new_instance_type_path, class: "button radius"  %>
