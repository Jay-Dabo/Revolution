<h1>Listing milestones</h1>

<table>
  <tr>
  <% for column in Milestone.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for milestone in @milestones %>
  <tr>
  <% for column in Milestone.content_columns %>
    <td><%=h milestone.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => milestone %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => milestone %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => milestone }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @milestone_pages.current.previous } if @milestone_pages.current.previous %>
<%= link_to 'Next page', { :page => @milestone_pages.current.next } if @milestone_pages.current.next %> 

<br />

<%= link_to 'New milestone', :action => 'new' %>
