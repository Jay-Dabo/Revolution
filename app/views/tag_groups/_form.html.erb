<%= simple_form_for(@tag_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :name %>
  </div>

  <%= f.simple_fields_for :tags do |tag_form| %>
	<%= render 'tag_fields', f: tag_form %>
  <% end %>
  
  <%= link_to_add_fields "Add Tag", f, :tags %><br><br>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
