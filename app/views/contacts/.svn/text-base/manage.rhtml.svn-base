<h3>Managing <%= current_user.full_name %>'s Contacts</h3>
<%= render :partial => "search_controls" %>

<% form_tag({:action => 'do_something'}, :id => 'this_form') do %>

<input type='submit' value='Check All' onClick="$$('#this_form input.check').each(function(box){box.checked=true});return false;" />
<input type='submit' value='Uncheck All' onClick="$$('#this_form input.check').each(function(box){box.checked=false});return false;" />
<div id="contacts-list">
	<%= render :partial => "manage_list" %>
</div>

<div style="background-color:#536A97;color:#FFFFFF;padding:.3em;">
	<label>Select an Action: </label><%= select('contact', 'choice', Contact::CHOICES) %>  <%= submit_tag 'Go' %>

</div>


<% end %>