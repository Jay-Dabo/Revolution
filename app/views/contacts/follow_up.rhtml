<% @item = @contact %>
<div style="float:none;clear:both;">
	

<%= render :partial => "shared/admin_box", :locals => {:item => @item} %>

<div id="left-column" style="width:36%">
	<p><label>Contact Type:</label><br>
		<%= @contact.contact_type.name rescue nil %></p>
	
	<p><label>Attributed To:</label><br>
		<%= @contact.attributed_to rescue nil %></p>
	
	<p><label>Assigned To:</label><br>
		<%= @contact.assigned_to rescue nil %></p>
</div>
<div id="left-column" style="width:36%">
	<p><label>Status:</label><br>
		<%= @contact.status rescue nil %></p>
		
	<p>
		<label>Responsible Ministry:</label><br>
			<%= @contact.responsible_ministry.name rescue nil %>
	</p>
	<p><label>Days Old:</label><br>
		 This contact is <%= time_ago_in_words @contact.created_at rescue nil %> old.</p>
</div>

<div style="float:none;clear:both;">
	<p><label>Comments:</label><br>
		<%= comments_for(@contact) rescue nil %></p>
</div>

</div>

<%= link_to 'manage my contacts', :controller => 'contacts', :action => 'manage' %> | 
<% if @contact.responsible_ministry_id %>
	<%= link_to "#{@contact.responsible_ministry.name rescue nil}", :controller => "ministries", :action => "show", :id => @contact.responsible_ministry_id %>
<% end %>

<div id="empty" style="float:none;clear:both;">
	&nbsp;
</div>

<div style="float:none;clear:both;">
	<%= render :partial => "follow_ups", :locals => {:contact => @contact} %>
</div>

<div id="new-follow-up">
	<%= render :partial => "add_follow_up_link", :locals => {:contact => @contact} %>
</div>