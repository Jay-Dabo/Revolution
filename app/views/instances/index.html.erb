<h3>Listing Instances</h3>

<table class="twelve responsive">
  <thead>
	  <tr>
			<th>Event_id</th>
			<th>Instance_type_id</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	<% @instances.each do |instance| %>
	  <tr>
	    <td><%= instance.event_id %></td>
	    <td><%= instance.instance_type_id %></td>
	    <td><%= link_to '', edit_instance_path(instance), title: 'edit', class: "general-enclosed foundicon-edit" %>&nbsp;&nbsp;&nbsp;
	    	<%= link_to '', instance, method: :delete, data: { confirm: 'Are you sure?' }, title: 'destroy', class: "general-enclosed foundicon-remove" %>
	   </td>
	  </tr>
	<% end %>
  </tbody>
</table>

<br />

<%= link_to "New Instance", new_instance_path, class: "button radius"  %>
