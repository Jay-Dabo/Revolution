<fieldset><legend><strong>Small Group Info</strong></legend>
<div>
	<%= link_to_remote "edit small group fields", :url => {:action => 'edit_small_group_fields', :id => @group.id}  %>
</div>

<div id="small_group_fields" style="float:none;clear:both;">
	<div id="blurb">
		<label>Blurb:</label><br>
		<%= @group.blurb rescue nil %>
	</div>
	<div id="left-column" width="48%">
		<p><label>Small Group Leader:</label><br>
		<%= @group.small_group_leader.full_name rescue nil %></p>

		<p><label>Special Requirements:</label><br>
		<%= @group.special_requirement.name rescue nil %></p>

		<p><label>Curriculum:</label><br>
		<%= @group.curriculum_choice.name rescue nil %></p>

		<p><label>Curriculum Cost:</label><br>
		<%= @group.curriculum_cost.name rescue nil %></p>
		
		<p><label>Attendance Requirement:</label><br>
		<%= @group.attendance_requirement.name rescue nil %></p>
		
		<p><label>Is Childcare Provided?:</label><br>
		<%= @group.is_childcare_provided.name rescue nil %></p>
		
		<p><label>Meeting Cadence:</label><br>
		<%= @group.meeting_cadence.name rescue nil %></p>
	</div>
	
	<div id="right-column" style="width:48%">
		<p><label>Leader Name for Printing:</label><br>
		<%= @group.leader_name_for_printing.name rescue nil %></p>
		
		<p><label>Meeting Place Name:</label><br>
		<%= @group.meeting_place.name rescue nil %></p>
		
		<p><label>Meeting Address:</label><br>
		<%= @group.meets_at_household.household_name rescue nil %><br>
		<%= @group.meets_at_household.address_block rescue nil %></p>
		
		<p><label>Closed Group?</label><br>
			<%= check_box :group, :closed %></p>
			
		<p><label>Meets On:</label><br>
			<%= @group.meets_on rescue nil %></p>
			
		<p><label>Time From - Until:</label><br>
			<%= @group.time_from.strftime('%I:%M %p') rescue nil %> - <%= @group.time_until.strftime('%I:%M %p') rescue nil %></p>
	</div>

</div>

<div id="empty">&nbsp;</div>

</fieldset>